<header class="cat_show">
  <h1 class="cat_title"><%= @category.name.pluralize %></h1>
</header>

<h2>Products:</h2>
<% @products.each do |f| %>
  <h4><%= link_to(f.name, product_path(f)) %></h4>
  <p><%= f.image %></p>
  <p><%= truncate(f.description, length: 50) { link_to " read on!", product_path(f) }
 %></p>
<% end %>

<br>

<%= link_to 'Back', products_path %>
