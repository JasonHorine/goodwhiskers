<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Mfg:</strong>
  <%= @product.mfg %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Url:</strong>
  <%= @product.url %>
</p>

<p>
  <strong>Image:</strong>
  <%= @product.image %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user.email %>
</p>

<%= link_to 'Leave a Review!', new_product_review_path(@product) %><br>

<h2>Reviews:</h2>
<% @reviews.each do |f| %>
  <h4><%= f.title %></h4>
  <p><%= f.comment %></p>
  <p><%= rating_for f, "rating" %></p>
<% end %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
