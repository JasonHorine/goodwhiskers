<%= form_for([@product, @review]) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </div>

  <div class="field">
    <%= f.label :review %><br>
    <%= f.text_area :comment %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
